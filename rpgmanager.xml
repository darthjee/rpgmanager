<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0">
	<name>RPG Manager</name>
	<creationDate>2008 07 20</creationDate>
	<author>Fernando Favini</author>
	<authorEmail>favini.fernando@gmail.com</authorEmail>
	<authorUrl>dj-madness.no-ip.org</authorUrl>
	<!--  The version string is recorded in the components table -->
	<version>0.1</version>
	<!-- The description is optional and defaults to the name -->
	<description>...</description>

	<!-- Site Main File Copy Section -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>rpgmanager.php</filename>
		<filename>editor.php</filename>
		<filename>dms.php</filename>
		<filename>player.php</filename>
	</files>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
		</sql>
	</uninstall>
	<administration>
		<!-- Administration Menu Section -->
		<menu>RPG Manager</menu>

		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
	<!-- Site Main File Copy Section -->
			<filename>index.html</filename>
			<filename>admin.rpgmanager.php</filename>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
		</files>
	</administration>
</install>
